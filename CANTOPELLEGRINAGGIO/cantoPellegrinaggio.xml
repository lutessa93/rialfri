    <text>
        <body>
            <div1 xml:id="d001" type="work">
                <p xml:id="d001l1" type="title" n="">I</p>
                <lb/>
                <lb/>
                <l xml:id="d001l2" n="1" rend="">Sy magre son devenus,</l>
                <l xml:id="d001l3" n="2">tropo alere m'a enfondus,</l>
                <l xml:id="d001l4" n="3">so n'a fat Romania;</l>
                <l xml:id="d001l5" n="4">E si in Franza son venus,</l>
                <l xml:id="d001l6" n="5">z'en serai zoli e drus</l>
                <l xml:id="d001l7" n="6">e menray gaya via.</l>
                <lb/>
                <p xml:id="d001l8" type="title" n="">II</p>
                <lb/>
                <lb/>
                <l xml:id="d001l9" n="7">Quan de Franza mi sovent,</l>
                <l xml:id="d001l10" n="8">de gran bien che de li vent,</l>
                <l xml:id="d001l11" n="9">tot mon cor mi desire,</l>
                <l xml:id="d001l12" n="10">pos che partir me covent</l>
                <l xml:id="d001l13" n="11">por aler a ssalvament</l>
                <l xml:id="d001l14" n="12">ver Yesu notre sire.</l>
                <lb/>
                <p xml:id="d001l15" type="title" n="">III</p>
                <lb/>
                <lb/>
                <l xml:id="d001l16" n="13">La Toscana, che est tan grant,</l>
                <l xml:id="d001l17" n="14">m'a donet recovremant</l>
                <l xml:id="d001l18" n="15">de morte e de martire,</l>
                <l xml:id="d001l19" n="16">E Mon Senis veremant,</l>
                <l xml:id="d001l20" n="17">lo alant e lo venant</l>
                <l xml:id="d001l21" n="18">me fat tenir de rire.</l>
                <lb/>
                <p xml:id="d001l22" type="title" n="">IV</p>
                <lb/>
                <lb/>
                <l xml:id="d001l23" n="19">Li gran mons e pugi agut</l>
                <l xml:id="d001l24" n="20">co li gran cayraz cornus</l>
                <l xml:id="d001l25" n="21">per plana Lonbardia.</l>
                <l xml:id="d001l26" n="22">Gros tornos son de refus,</l>
                <l xml:id="d001l27" n="23">se non son de poys o plus</l>
                <l xml:id="d001l28" n="24">e no ly esparan mia.</l>
                <lb/>
                <p xml:id="d001l29" type="title" n="">V</p>
                <lb/>
                <lb/>
                <l xml:id="d001l30" n="25">Z'ay florin toz despendus,</l>
                <l xml:id="d001l31" n="26">gros tornos e tan d'eschus</l>
                <l xml:id="d001l32" n="27">las! ze ne les plan mia.</l>
                <l xml:id="d001l33" n="28">Ma lo let on ay zagut</l>
                <l xml:id="d001l34" n="29">m'a fat lo costat boysut,</l>
                <l xml:id="d001l35" n="30">se non es conpagnia.</l>
                <lb/>
                <p xml:id="d001l36" type="title" n="">VI</p>
                <lb/>
                <lb/>
                <l xml:id="d001l37" n="31">Lo bon vin froyt e ardant</l>
                <l xml:id="d001l38" n="32">cho lo bon pastis bolgant:</l>
                <l xml:id="d001l39" n="33">lay si fa bon alere!</l>
                <lb/>
                <lb/>
                <p xml:id="d001l40" type="title" n="">VII</p>
                <lb/>
                <lb/>
                <l xml:id="d001l41" n="34">E polzinix son a verzus</l>
                <l xml:id="d001l42" n="35">chi non son pont de refus:</l>
                <l xml:id="d001l43" n="36">lay si fa bon dedure!</l>
                <lb/>
                <lb/>
                <lb/>
                <lb/>
                <lb/>
            </div1>
