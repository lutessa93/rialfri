    <text>
        <body>
            <div1 xml:id="d001" type="work" n="">
                <div2 xml:id="d001c001" n="I">
                    <head>I</head>
                    <l xml:id="d001l1" n="1">Se tu ne laises la botegla,</l>
                    <l xml:id="d001l2" n="2">je te dunray desus l'oregla</l>
                    <lb/>
                    <l xml:id="d001l3" n="3">Ja ne sera de ma bocha ostea,</l>
                    <l xml:id="d001l4" n="4">si sera ma goria bien arossea.</l>
                    <lb/>
                </div2>
                <div2 xml:id="d001c002" n="II">
                    <head>II</head>
                    <l xml:id="d001l5" n="1">Dedans cyst boys vous faut venir</l>
                    <l xml:id="d001l6" n="2">pour nostres amours mius acumplir</l>
                    <lb/>
                    <l xml:id="d001l7" n="3">Si d'aucun fusïens trovés</l>
                    <l xml:id="d001l8" n="4">nous serïens deshonorés.</l>
                </div2>
            </div1>
        </body>
